<form method="post" action="/figures/<%= @figure.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="figure_name">Edit New Figure</label><br>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>
  <br>

  <label for="">Edit Landmarks</label><br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br>
  <% end %>  
  <br>

  <label for="new_landmark">Or Create a New Landmark</label><br>
  <input type="text" id="new_landmark" name="landmark[name]"><br>
  
  <label>And Its Year Completed</label><br>
  <input type="text" name="landmark[year_completed]">
  <br>
  
  <label for="title_name">Edit a Title</label><br>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %><br>
  <% end %> 
  <br>
  
  <label for="new_title">Or Create a New Title</label><br>
  <input type="text" id="new_title" name="title[name]"><br>
  <br>
  
  <input type="submit" value="Edit Figure">

</form>